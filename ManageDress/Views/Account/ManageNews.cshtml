@model IEnumerable<Dress_BLL.Model.NewsArticlesModel>
@{
    ViewBag.Title = "ManageUser";
    Layout = "~/Views/Account/Admin.cshtml";
    ViewData["Title"] = "Administration Console";
    ViewBag.Home = "active";
    var role = Session["Role"].ToString();
}
<script>
    function editNews(code) {
        location.href = '/Account/EditNews?code=' + code;
    }
    function addNews(code) {
        location.href = '/Account/AddNews';
    }
    $(document).ready(function () {

    });
</script>

<div class="row">
    <h2>Danh sách trang tin tức</h2>
    @if (role == "Manager" || role == "Edit")
    {
        <div style="width: 100%; display:flex; margin-top: 30px">
            <input type="button" id="edit" onclick="addNews()" class="btn btn-primary" value="Thêm tin tức" />
        </div>
    }

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Mã trang tin tức</th>
                <th>Tên trang tin tức</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width: 10%">@item.Code</td>
                    <td style="width: 10%">@item.Title</td>
                    <td style="width: 10%;">
                        @if (role == "Manager" || role == "Edit")
                        {
                            <input type="button" id="edit" onclick="editNews('@item.Code')" class="btn btn-primary" value="Chỉnh sửa" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>